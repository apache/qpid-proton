[tox]
envlist = py26,py27,py33,py34,py35
minversion = 1.4
skipdist = True
setupdir = @py_bin@/dist

[testenv]
usedevelop = False
setenv =
    VIRTUAL_ENV={envdir}
    DEBUG=True
passenv =
    PKG_CONFIG_PATH
    CFLAGS
    SASLPASSWD
    VALGRIND
    CLASSPATH
commands =
    @CMAKE_SOURCE_DIR@/tests/python/proton-test {posargs}
deps =
    unittest2

[testenv:pep8]
commands = flake8

[testenv:docs]
commands = python setup.py build_sphinx
